{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "components/**/*",
    "context/**/*",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demos",
    "App.tsx",
    "index.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}

